<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.model.Directory" table="directories">
        <id name="id" type="int">
            <generator class="identity"/>
        </id>
        <many-to-one name="parent" class="org.example.model.Directory" column="parent_id" fetch="select"/>
        <set name="subdirectories" inverse="true" fetch="select" cascade="all">
            <key column="parent_id"/>
            <one-to-many class="org.example.model.Directory"/>
        </set>
        <set name="files" inverse="true" fetch="select" cascade="all">
            <key column="directory_id"/>
            <one-to-many class="org.example.model.File"/>
        </set>
        <property name="name" column="name" not-null="true"/>
    </class>
</hibernate-mapping>
